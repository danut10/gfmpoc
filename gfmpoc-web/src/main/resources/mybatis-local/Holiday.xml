<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ro.cegeka.gfm.poc.app.daoLocal.DaoLocalHoliday">

	<select id="readList" resultType="Holiday">
		select * from Holiday
	</select>
			
	<select id="read" resultType="holiday">
		select * from Holiday where id = #{id}
	</select>
	
	<delete id="delete">
		delete from Holiday where id = #{id}
	</delete>
	
	<update id="update" parameterType="Holiday">
		update Holiday
     	set 
			name = #{record.name}
		where
			id = #{record.id}
	</update>
   
	<insert id="create" parameterType="Holiday" useGeneratedKeys="true" keyProperty="record.id">
		<selectKey keyProperty="record.id" resultType="int" order="AFTER">
            select last_insert_id();
		</selectKey>	
		insert into Holiday(name) values(#{record.name})
	</insert>
	
</mapper>
